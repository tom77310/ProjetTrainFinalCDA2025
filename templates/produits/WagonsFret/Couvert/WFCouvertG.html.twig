{% extends 'base.html.twig' %}

{% block body %}


	<!DOCTYPE html>
	<html lang="en">

		<head>
			<meta charset="UTF-8">
			<meta name="viewport" content="width=device-width, initial-scale=1.0">
			<link rel="stylesheet" href="{{ asset('CSS/Carrousel.css') }}">
			<link rel="stylesheet" href="{{ asset('CSS/ProduitWF.css') }}">
			<title>Wagon de Fret Couvert Taille G</title>
		</head>

		<body>
				<div
					class="titre">
					<a href={{ path('TypeProduit_WagonFret') }}>Retour vers les types de Wagons de Fret</a>
					{% for Produits in WFCouvertG %}
						<h1>{{Produits.NomProduit}}</h1>
					</div>
					<main>
						<div id="carrousel">
							<figure>
								<img src={{ asset('images/Produits/WagonFret/Couvert/TailleG/') ~ Produits.vue1 }} alt="WagonFretCouvertTailleGVue1" id="WagonFretCouvertTailleGVue1">
							</figure>
							<figure>
								<img src={{ asset('images/Produits/WagonFret/Couvert/TailleG/') ~ Produits.vue2 }} alt="WagonFretCouvertTailleGVue2" id="WagonFretCouvertTailleGVue2">
							</figure>
							<figure>
								<img src={{ asset('images/Produits/WagonFret/Couvert/TailleG/') ~ Produits.vue3 }} alt="WagonFretCouvertTailleGVue3" id="WagonFretCouvertTailleGVue3">
							</figure>
						</div>
					</main>
					<div class="WFCouvertTailleG">
						<div class="droiteGCouvert">
							<p>
								Prix unitaire :
								{{Produits.prix}}
								â‚¬
							</p>
							{% if app.user %}
							<a href={{ path('CompteUtilisateur_AjoutPanier', {id: Produits.id} ) }}>Ajouter au panier</a>
						{% else %}
							<a href={{ path('app_login') }}>Connectez-vous pour ajouter cet article a votre panier</a>
						{% endif %}
						</div>
					</div>
					<div class="descriptionGCouvert">
						<p>
							<span class="titre_description">Description du Produit :</span>
							<br>
							{{Produits.description}}
						</p>
					</div>
				{% endfor %}
		</body>
		<script src="./js/Carrousel.js"></script>
	</html>
{% endblock %}
