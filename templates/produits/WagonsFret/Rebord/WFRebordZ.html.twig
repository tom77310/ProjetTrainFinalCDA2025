{% extends 'base.html.twig' %}

{% block body %}


	<!DOCTYPE html>
	<html lang="en">

		<head>
			<meta charset="UTF-8">
			<meta name="viewport" content="width=device-width, initial-scale=1.0">
			<link rel="stylesheet" href="{{ asset('CSS/Carrousel.css') }}">
			<link rel="stylesheet" href="{{ asset('CSS/ProduitWF.css') }}">
			<title>Wagon de Fret Rebord Taille Z</title>
		</head>

		<body>
				<div
					class="titre">
					<a href={{ path('TypeProduit_WagonFret') }}>Retour vers les types de Wagons de Fret</a>
					{% for Produits in WFRebordZ %}
						<h1>{{Produits.NomProduit}}</h1>
					</div>
					<main>
						<div id="carrousel">
							<figure>
								<img src={{ asset('images/Produits/WagonFret/Rebord/TailleZ/') ~ Produits.vue1 }} alt="WagonFretRebordTailleZVue1" id="WagonFretRebordTailleZVue1">
							</figure>
							<figure>
								<img src={{ asset('images/Produits/WagonFret/Rebord/TailleZ/') ~ Produits.vue2 }} alt="WagonFretRebordTailleZVue2" id="WagonFretRebordTailleZVue2">
							</figure>
							<figure>
								<img src={{ asset('images/Produits/WagonFret/Rebord/TailleZ/') ~ Produits.vue3 }} alt="WagonFretRebordTailleZVue3" id="WagonFretRebordTailleZVue3">
							</figure>
						</div>
					</main>
					<div class="WFRebordTailleZ">
						<div class="droiteZRebord">
							<p>
								Prix unitaire :
								{{Produits.prix}}
								â‚¬
							</p>
							{% if app.user %}

								<a href={{ path('app_ajoutpanier', {id: Produits.id} ) }}>Ajouter au panier</a>

							{% else %}

								<a>Connectez-vous pour ajouter cet article a votre panier</a> {# lien a mettre quand je m'occuperait de la page login => href={{ path('app_login') }} #}

							{% endif %}
						</div>
					</div>
					<div class="descriptionZRebord">
						<p>
							<span class="titre_description">Description du Produit :</span>
							<br>
							{{Produits.detail}}
						</p>
					</div>
				{% endfor %}
		</body>
		<script src="./js/Carrousel.js"></script>
	</html>
{% endblock %}
