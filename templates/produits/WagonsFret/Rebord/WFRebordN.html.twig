{% extends 'base.html.twig' %}

{% block body %}


	<!DOCTYPE html>
	<html lang="en">

		<head>
			<meta charset="UTF-8">
			<meta name="viewport" content="width=device-width, initial-scale=1.0">
			<link rel="stylesheet" href="{{ asset('CSS/Carrousel.css') }}">
			<link rel="stylesheet" href="{{ asset('CSS/ProduitWF.css') }}">
			<title>Wagon Fret Rebord Taille N</title>
		</head>

		<body>
			<div
				class="titre">
				<a href={{ path('TypeProduit_WagonFret') }}>Retour vers les types de Wagons de fret</a>
				{% for Produits in WFRebordN %}
					<h1>{{Produits.NomProduit}}</h1>
				</div>
				<main>
						<div id="carrousel">
							<figure>
								<img src={{ asset('images/Produits/WagonFret/Rebord/TailleN/') ~ Produits.vue1 }} alt="WagonFretRebordTailleNVue1" id="WagonFretRebordTailleNVue1">
							</figure>
							<figure>
								<img src={{ asset('images/Produits/WagonFret/Rebord/TailleN/') ~ Produits.vue2 }} alt="WagonFretRebordTailleNVue2" id="WagonFretRebordTailleNVue2">
							</figure>
							<figure>
								<img src={{ asset('images/Produits/WagonFret/Rebord/TailleN/') ~ Produits.vue3 }} alt="WagonFretRebordTailleNVue3" id="WagonFretRebordTailleNVue3">
							</figure>
						</div>
					</main>
				<div class="WFRebordTailleN">
					<div class="droiteNRebord">
						<p>
							Prix unitaire :
							{{Produits.prix}}
							â‚¬
						</p>
						{% if app.user %}
							<a href={{ path('Compte_UtilisateurAjoutPanier', {id: Produits.id} ) }}>Ajouter au panier</a>
						{% else %}
							<a href={{ path('app_login') }}>Connectez-vous pour ajouter cet article a votre panier</a>
						{% endif %}
					</div>
				</div>
				<div class="descriptionNRebord">
					<p>
						<span class="titre_description">Description du Produit :</span>
						<br>
						{{Produits.description}}
					</p>
				</div>
			{% endfor %}
		</body>
		<script src="./js/Carrousel.js"></script>
	</html>
{% endblock %}
