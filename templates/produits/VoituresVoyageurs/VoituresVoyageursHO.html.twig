{% extends 'base.html.twig' %}

{% block body %}


	<!DOCTYPE html>
	<html lang="en">

		<head>
			<meta charset="UTF-8">
			<meta name="viewport" content="width=device-width, initial-scale=1.0">
			<link rel="stylesheet" href="{{ asset('CSS/Carrousel.css') }}">
			<link rel="stylesheet" href="{{ asset('CSS/ProduitsVoituresVoyageurs.css') }}">
			<title>VoitureVoyageurs Taille HO</title>
		</head>

		<body>
				<div
					class="titre">
				<a href={{ path('TypeProduit_VoituresVoyageurs') }}>Retour vers les types de Voitures de Voyageurs</a>
					{% for Produits in VoituresVoyageursHO %}
						<h1>{{Produits.NomProduit}}</h1>
					</div>
					<main>
						<div id="carrousel">
							<figure>
								<img src={{ asset('images/Produits/VoitureVoyageurs/TailleHO/') ~ Produits.vue1 }} alt="VoitureVoyageursTailleHOvue1" id="VoituresVoyageursTailleHOVue1">
							</figure>
							<figure>
								<img src={{ asset('images/Produits/VoitureVoyageurs/TailleHO/') ~ Produits.vue2 }} alt="VoitureVoyageursTailleHOvue2" id="VoituresVoyageursTailleHOVue2">
							</figure>
							<figure>
								<img src={{ asset('images/Produits/VoitureVoyageurs/TailleHO/') ~ Produits.vue3 }} alt="VoitureVoyageursTailleHOvue3" id="VoituresVoyageursTailleHOVue3">
							</figure>
						</div>
					</main>
					<div class="VoituresVoyageursTailleHO">
						<div class="droiteHOVoituresVoyageurs">
							<p>
								Prix unitaire :
								{{Produits.prix}}
								â‚¬
							</p>
							{% if app.user %}

								<a href={{ path('app_ajoutpanier', {id: Produits.id} ) }}>Ajouter au panier</a>

							{% else %}

								<a>Connectez-vous pour ajouter cet article a votre panier</a> {# lien a mettre quand je m'occuperait de la page login => href={{ path('app_login') }} #}

							{% endif %}
						</div>
					</div>
					<div class="descriptionHOVoituresVoyageurs">
						<p>
							<span class="titre_description">Description du Produit :</span>
							<br>
							{{Produits.detail}}
						</p>
					</div>
				{% endfor %}
		</body>
		<script src="./js/Carrousel.js"></script>
	</html>
{% endblock %}
