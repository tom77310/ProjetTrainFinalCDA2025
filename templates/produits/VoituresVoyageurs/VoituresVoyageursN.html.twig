{% extends 'base.html.twig' %}

{% block body %}


	<!DOCTYPE html>
	<html lang="en">

		<head>
			<meta charset="UTF-8">
			<meta name="viewport" content="width=device-width, initial-scale=1.0">
			<link rel="stylesheet" href="{{ asset('CSS/Carrousel.css') }}">
			<link rel="stylesheet" href="{{ asset('CSS/ProduitsVoituresVoyageurs.css') }}">
			<title>VoitureVoyageurs Taille N</title>
		</head>

		<body>
				<div
					class="titre">
				<a href={{ path('TypeProduit_VoituresVoyageurs') }}>Retour vers les types de Voitures de Voyageurs</a>
					{% for Produits in VoituresVoyageursN %}
						<h1>{{Produits.NomProduit}}</h1>
					</div>
					<main>
						<div id="carrousel">
							<figure>
								<img src={{ asset('images/Produits/VoitureVoyageurs/TailleN/') ~ Produits.vue1 }} alt="VoitureVoyageursTailleNvue1" id="VoituresVoyageursTailleNVue1">
							</figure>
							<figure>
								<img src={{ asset('images/Produits/VoitureVoyageurs/TailleN/') ~ Produits.vue2 }} alt="VoitureVoyageursTailleNvue2" id="VoituresVoyageursTailleNVue2">
							</figure>
							<figure>
								<img src={{ asset('images/Produits/VoitureVoyageurs/TailleN/') ~ Produits.vue3 }} alt="VoitureVoyageursTailleNvue3" id="VoituresVoyageursTailleNVue3">
							</figure>
						</div>
					</main>
					<div class="VoituresVoyageursTailleN">
						<div class="droiteNVoituresVoyageurs">
							<p>
								Prix unitaire :
								{{Produits.prix}}
								â‚¬
							</p>
							{% if app.user %}
							<a href={{ path('Compte_UtilisateurAjoutPanier', {id: Produits.id} ) }}>Ajouter au panier</a>
						{% else %}
							<a href={{ path('app_login') }}>Connectez-vous pour ajouter cet article a votre panier</a>
						{% endif %}
						</div>
					</div>
					<div class="descriptionNVoituresVoyageurs">
						<p>
							<span class="titre_description">Description du Produit :</span>
							<br>
							{{Produits.description}}
						</p>
					</div>
				{% endfor %}
		</body>
		<script src="./js/Carrousel.js"></script>
	</html>
{% endblock %}
