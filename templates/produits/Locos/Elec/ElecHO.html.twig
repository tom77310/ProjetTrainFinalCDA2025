	<!DOCTYPE html>
	<html lang="en">

		<head>
			<meta charset="UTF-8">
			<meta name="viewport" content="width=device-width, initial-scale=1.0">
			<link rel="stylesheet" href="{{ asset('CSS/Carrousel.css') }}">
			<link rel="stylesheet" href="{{ asset('CSS/ProduitLocos.css') }}">
			<title>Locomotive Electrique Taille HO</title>
		</head>

		<body>
				<div
					class="titre">
					<a href={{ path('Locomotives_typelocos') }}>Retour vers les types de locomotives</a>
					{% for Produits in LocoElecHO %}
						<h1>{{Produits.NomProduit}}</h1>
					</div>
								<img src={{ asset('images/Produits/Locomotives/Elec/TailleHO/') ~ Produits.vue1 }} alt="LocoElecTailleHOvue1" id="LocoElecTailleHOVue1">
					<div class="LocoElecTailleHO">
						<div class="droiteHOElec">
							<p>
								Prix unitaire :
								{{Produits.prix}}
								â‚¬
							</p>
							{% if app.user %}

								<a href={{ path('app_ajoutpanier', {id: Produits.id} ) }}>Ajouter au panier</a>

							{% else %}

								<a>Connectez-vous pour ajouter cet article a votre panier</a> {# lien a mettre quand je m'occuperait de la page login => href={{ path('app_login') }} #}

							{% endif %}
						</div>
					</div>
					<div class="descriptionHOElec">
						<p>
							<span class="titre_description">Description du Produit :</span>
							<br>
							{{Produits.detail}}
						</p>
					</div>
				{% endfor %}
		</body>
		<script src="./js/Carrousel.js"></script>
	</html>
{% endblock %}
