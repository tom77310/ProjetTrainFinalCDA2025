{% extends 'base.html.twig' %}

{% block body %}


	<!DOCTYPE html>
	<html lang="en">

		<head>
			<meta charset="UTF-8">
			<meta name="viewport" content="width=device-width, initial-scale=1.0">
			<link rel="stylesheet" href="{{ asset('CSS/Carrousel.css') }}">
			<link rel="stylesheet" href="{{ asset('CSS/ProduitLocos.css') }}">
			<title>Locomotive Elec Taille N</title>
		</head>

		<body>
				<div
					class="titre">
					<a href={{ path('Locomotives_typelocos') }}>Retour vers les types de locomotives</a>
					{% for Produits in LocoElecN %}
						<h1>{{Produits.NomProduit}}</h1>
					</div>
					<main>
						<div id="carrousel">
							<figure>
								<img src={{ asset('images/Produits/Locomotives/Elec/TailleN/') ~ Produits.vue1 }} alt="LocoElecTailleNvue1" id="LocoElecTailleNVue1">
							</figure>
							<figure>
								<img src={{ asset('images/Produits/Locomotives/Elec/TailleN/') ~ Produits.vue2 }} alt="LocoElecTailleNvue2" id="LocoElecTailleNVue2">
							</figure>
						</div>
					</main>
					<div class="LocoElecTailleN">
						<div class="droiteNElec">
							<p>
								Prix unitaire :
								{{Produits.prix}}
								â‚¬
							</p>
							{% if app.user %}

								<a href={{ path('app_ajoutpanier', {id: Produits.id} ) }}>Ajouter au panier</a>

							{% else %}

								<a>Connectez-vous pour ajouter cet article a votre panier</a> {# lien a mettre quand je m'occuperait de la page login => href={{ path('app_login') }} #}

							{% endif %}
						</div>
					</div>
					<div class="descriptionNElec">
						<p>
							<span class="titre_description">Description du Produit :</span>
							<br>
							{{Produits.detail}}
						</p>
					</div>
				{% endfor %}
		</body>
		<script src="./js/Carrousel.js"></script>
	</html>
{% endblock %}
