{% extends 'base.html.twig' %}

{% block body %}


	<!DOCTYPE html>
	<html lang="en">

		<head>
			<meta charset="UTF-8">
			<meta name="viewport" content="width=device-width, initial-scale=1.0">
			<link rel="stylesheet" href="{{ asset('CSS/Carrousel.css') }}">
			<link rel="stylesheet" href="{{ asset('CSS/ProduitLocos.css') }}">
			<title>Locomotive Vapeur Taille Z</title>
		</head>

		<body>
				<div
					class="titre">
					<a href={{ path('TypeProduit_Locomotives') }}>Retour vers les types de locomotives</a>
					{% for Produits in LocoVapeurZ %}
						<h1>{{Produits.NomProduit}}</h1>
					</div>
					<main>
						<div id="carrousel">
							<figure>
								<img src={{ asset('images/Produits/Locomotives/Vapeur/TailleZ/') ~ Produits.vue1 }} alt="LocoVapeurTailleZvue1" id="LocoVapeurTailleZVue1">
							</figure>
							<figure>
								<img src={{ asset('images/Produits/Locomotives/Vapeur/TailleZ/') ~ Produits.vue2 }} alt="LocoVapeurTailleZvue2" id="LocoVapeurTailleZVue2">
							</figure>
							<figure>
								<img src={{ asset('images/Produits/Locomotives/Vapeur/TailleZ/') ~ Produits.vue3 }} alt="LocoVapeurTailleZvue3" id="LocoVapeurTailleZVue3">
							</figure>
						</div>
					</main>
					<div class="LocoVapeurTailleZ">
						<div class="droiteZVapeur">
							<p>
								Prix unitaire :
								{{Produits.prix}}
								â‚¬
							</p>
							{% if app.user %}
							<a href={{ path('Compte_UtilisateurAjoutPanier', {id: Produits.id} ) }}>Ajouter au panier</a>
						{% else %}
							<a href={{ path('app_login') }}>Connectez-vous pour ajouter cet article a votre panier</a>
						{% endif %}
						</div>
					</div>
					<div class="descriptionZVapeur">
						<p>
							<span class="titre_description">Description du Produit :</span>
							<br>
							{{Produits.description}}
						</p>
					</div>
				{% endfor %}
		</body>
		<script src="./js/Carrousel.js"></script>
	</html>
{% endblock %}
