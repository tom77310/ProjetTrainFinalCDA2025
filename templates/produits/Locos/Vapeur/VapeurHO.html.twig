{% extends 'base.html.twig' %}

{% block body %}


	<!DOCTYPE html>
	<html lang="en">

		<head>
			<meta charset="UTF-8">
			<meta name="viewport" content="width=device-width, initial-scale=1.0">
			<link rel="stylesheet" href="{{ asset('CSS/Carrousel.css') }}">
			<link rel="stylesheet" href="{{ asset('CSS/ProduitLocos.css') }}">
			<title>Locomotive a Vapeur Taille HO</title>
		</head>

		<body>
			<div
				class="titre">
				<a href={{ path('TypeProduit_Locomotives') }}>Retour vers les types de locomotives</a>
				{% for Produits in LocoVapeurHO %}
					<h1>{{Produits.NomProduit}}</h1>
				</div>
				<main>
						<div id="carrousel">
							<figure>
								<img src={{ asset('images/Produits/Locomotives/Vapeur/TailleHO/') ~ Produits.vue1 }} alt="LocoVapeurTailleHOvue1" id="LocoVapeurTailleHOVue1">
							</figure>
							<figure>
								<img src={{ asset('images/Produits/Locomotives/Vapeur/TailleHO/') ~ Produits.vue2 }} alt="LocoVapeurTailleHOvue2" id="LocoVapeurTailleHOVue2">
							</figure>
						</div>
					</main>
					<div class="droiteHOVapeur">
						<p>
							Prix unitaire :
							{{Produits.prix}}
							â‚¬
						</p>
						{% if app.user %}
							<a href={{ path('CompteUtilisateur_AjoutPanier', {id: Produits.id} ) }}>Ajouter au panier</a>
						{% else %}
							<a href={{ path('app_login') }}>Connectez-vous pour ajouter cet article a votre panier</a>
						{% endif %}
					</div>
				</div>
				<div class="descriptionHOVapeur">
					<p>
						<span class="titre_description">Description du Produit :</span>
						<br>
						{{Produits.description}}
					</p>
				</div>
			{% endfor %}
		</body>
		<script src="./js/Carrousel.js"></script>
	</html>
{% endblock %}
