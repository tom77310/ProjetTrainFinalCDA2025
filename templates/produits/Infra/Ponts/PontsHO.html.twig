{% extends 'base.html.twig' %}

{% block body %}


	<!DOCTYPE html>
	<html lang="en">

		<head>
			<meta charset="UTF-8">
			<meta name="viewport" content="width=device-width, initial-scale=1.0">
			<link rel="stylesheet" href="{{ asset('CSS/Carrousel.css') }}">
			<link rel="stylesheet" href="{{ asset('CSS/Produitsinfra.css') }}">
			<title>Ponts Taille HO</title>
		</head>

		<body>
			<div
				class="titre">
				<a href={{ path('TypeProduit_Infrastructures') }}>Retour vers les types d'Infrastructures</a>
				{% for Produits in PontsHO %}
					<h1>{{Produits.NomProduit}}</h1>
				</div>
				<div class="PontsTailleHO">
								<img src={{ asset('Images/Produits/Infrastructure_ferroviaires/Ponts/') ~ Produits.vue1 }} alt="PontsTailleHOVue1" id="PontsTailleHOVue1">

                    <div class="droiteHOPonts">
						<p>
							Prix unitaire :
							{{Produits.prix}}
							â‚¬
						</p>
						{% if app.user %}
							<a href={{ path('CompteUtilisateur_AjoutPanier', {id: Produits.id} ) }}>Ajouter au panier</a>
						{% else %}
							<a href={{ path('app_login') }}>Connectez-vous pour ajouter cet article a votre panier</a>
						{% endif %}
					</div>
				</div>
				<div class="descriptionHOPonts">
					<p>
						<span class="titre_description">Description du Produit :</span>
						<br>
						{{Produits.description}}
					</p>
				</div>
                
			{% endfor %}
		</body>
	</html>
{% endblock %}
