{% extends 'base.html.twig' %}

{% block title %}Gestion des Produits{% endblock %}

{% block body %}
 <link rel="stylesheet" href={{ asset('CSS/Admin.css') }}>

 {% include 'partials/_navCompte.html.twig' %}
<h1>Liste des Produits</h1>

<table class="liste_produits">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Prix</th>
            <th>Stock</th>
            <th>Détails</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>
    </thead>
    <tbody>
    {% for produit in produits %}
        <tr>
            <td data-label="ID">{{ produit.id }}</td>
            <td data-label="Nom">{{ produit.nomProduit }}</td>
            <td data-label="Prix">{{ produit.prix }} €</td>
            <td data-label="Stock">{{ produit.stock }}</td>
            <td data-label="Détails">
                <a href="{{ path('Administrateur_Detailproduit', {id: produit.id}) }}">Voir</a>
            </td>
            <td data-label="Modifier">
                <a href="{{ path('Administrateur_ModifierProduit', {id: produit.id}) }}">Modifier</a>
            </td>
            <td data-label="Supprimer">
                <form method="post" action="{{ path('Administrateur_SupprimerProduit', {id: produit.id}) }}" style="display:inline-block" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ? Cette action est définitive.');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                    <button type="submit">Supprimer</button>
                </form>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="NouveauProduit">
    <a href="{{ path('Administrateur_AjoutProduit') }}" class="">Ajouter un produit</a>
</div>
{% endblock %}

